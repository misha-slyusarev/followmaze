#!/usr/bin/env ruby

lib = File.expand_path(File.dirname(__FILE__) + '/../lib')
$LOAD_PATH.unshift(lib) if File.directory?(lib) && !$LOAD_PATH.include?(lib)

require 'message_broker'

args = ARGV.dup
ARGV.clear

if args.empty?
  MessageBroker.new.run
else
  events_port = args.shift.strip
  MessageBroker.new.run events_port
end
