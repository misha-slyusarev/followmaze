#!/usr/bin/env ruby

lib = File.expand_path(File.dirname(__FILE__) + '/../lib')
$LOAD_PATH.unshift(lib) if File.directory?(lib) && !$LOAD_PATH.include?(lib)

require 'message_broker'

args = ARGV.dup
ARGV.clear

if args.empty?
  MessageBroker::Base.new.run
else
  event_port = args.shift.strip
  MessageBroker::Base.new.run event_port
end
